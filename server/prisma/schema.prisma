generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EDITOR
  JOURNALIST
}

model User {
  id       Int           @id @default(autoincrement())
  name     String
  email    String        @unique
  password String
  role     Role          @default(JOURNALIST)
  stories  StoryOnUser[]
  comments Comment[]
}

model Story {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  journalists StoryOnUser[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  publishBy   DateTime?
  topic       String?
  comments    Comment[]

  @@index([publishBy])
  @@index([updatedAt])
}

model StoryOnUser {
  userId  Int
  storyId Int
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  story   Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@id([userId, storyId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  storyId   Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  story     Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
}
